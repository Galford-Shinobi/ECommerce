@model IEnumerable<VMBarraProducto>

@*@if (Model.Count() > 0)
{*@
    <table class="table table-striped table-responsive-md table-bordered smfont" id="tbdata" style="width:100%">
        <colgroup>
            <col span="1" />
            <col span="1" />
            <col span="1" />
            <col span="1" />
        </colgroup>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Descripcion)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Barcode)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreDepartamento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreIva)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Precio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pieza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NombreMedida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Medida)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsActive)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PictureFullPath)
                </th>
                <th>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Productos", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Producto')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Producto </a>
                    @*<a onclick="showInPopup('@Url.Action("AddOrEdit", "Medidum", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Concepto')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Concepto </a>*@
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Barcode)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreDepartamento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreIva)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Precio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pieza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NombreMedida)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Medida)
                    </td>
                    <td>
                        @if(@item.IsActive==1)
                        {
                            <span class="badge badge-info text-dark">Activo</span>
                        }
                        else
                        {
                            <span class="badge badge-danger text-dark">No Activo</span>
                        }
                    </td>
                    <td>
                        <div class="zoom">
                            <img src="@item.PictureFullPath" style="height:100px; max-width:100px;  border-radius:50px" class="text-center" />
                        </div>
                    </td>
                    <td>
                        <a onclick="showInPopup('@Url.Action("AddOrEdit", "Productos", new { id = item.Idproducto }, Context.Request.Scheme)' , 'Actualizar Producto')" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i> </a>
                        <button data-id="@item.Idproducto" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="bi bi-trash"></i></button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

@*}
else
{
    <p> No Hay registros de Productos </p>
    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Productos", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Producto')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Producto </a>
}*@
