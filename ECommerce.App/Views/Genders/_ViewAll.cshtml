@model IEnumerable<GenderDto>
<table class="table table-striped table-responsive-md table-bordered smfont" id="tbdata" style="width:100%">
    <colgroup>
        <col span="1" />
        <col span="1" />
        <col span="1" />
        <col span="1" />
    </colgroup>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GeneroName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th>
                <a onclick="showInPopup('@Url.Action("AddOrEdit", "Genders", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Genero')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Genero </a>
                @*<a onclick="showInPopup('@Url.Action("AddOrEdit", "Medidum", new { id = 0 }, Context.Request.Scheme)' , 'Nueva Concepto')" class="btn btn-sm btn-secondary text-white"><i class="bi bi-plus-square-fill"></i> Concepto </a>*@
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.GeneroName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (@item.IsActive == 1)
                    {
                        <span class="badge rounded-pill bg-info text-dark">Activo</span>
                    }
                    else
                    {
                        <span class="badge rounded-pill bg-danger text-dark">No Activo</span>
                    }
                </td>
                <td>
                    <a onclick="showInPopup('@Url.Action("AddOrEdit", "Genders", new { id = item.GenderId }, Context.Request.Scheme)' , 'Actualizar Genero')" class="btn btn-sm btn-outline-warning"><i class="bi bi-pencil-square"></i> </a>
                    <button data-id="@item.GenderId" class="btn btn-sm btn-outline-danger deleteItem" data-bs-toggle="modal" data-bs-target="#deleteDialog"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>
